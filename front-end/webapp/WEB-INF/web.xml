<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <display-name>Clinica Veterinaria Web Application</display-name>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Mapeamentos de Servlets de Autenticação e Cadastro -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>br.com.clinica.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CadastroServlet</servlet-name>
        <servlet-class>br.com.clinica.servlets.CadastroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastroServlet</servlet-name>
        <url-pattern>/cadastrar</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VerificacaoEmailServlet</servlet-name>
        <servlet-class>br.com.clinica.servlets.VerificacaoEmailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerificacaoEmailServlet</servlet-name>
        <url-pattern>/verificar</url-pattern>
    </servlet-mapping>

    <!-- Mapeamentos de Servlets de Recuperação de Senha -->
    <servlet>
        <servlet-name>EsqueciSenhaServlet</servlet-name>
        <servlet-class>br.com.clinica.servlets.EsqueciSenhaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EsqueciSenhaServlet</servlet-name>
        <url-pattern>/esqueci-senha</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RedefinirSenhaServlet</servlet-name>
        <servlet-class>br.com.clinica.servlets.RedefinirSenhaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RedefinirSenhaServlet</servlet-name>
        <url-pattern>/redefinir-senha</url-pattern>
    </servlet-mapping>

    <!-- Mapeamentos de Servlets de Gestão de Pets -->
    <servlet>
        <servlet-name>CadastrarPetServlet</servlet-name>
        <servlet-class>br.com.clinica.servlets.CadastrarPetServlet</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>0</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastrarPetServlet</servlet-name>
        <url-pattern>/cadastrar-pet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AtualizarPetServlet</servlet-name>
        <servlet-class>br.com.clinica.servlets.AtualizarPetServlet</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>0</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>AtualizarPetServlet</servlet-name>
        <url-pattern>/atualizar-pet</url-pattern>
    </servlet-mapping>

    <!-- ====================================================== -->
    <!--  NOVO: MAPEAMENTO DO SERVLET DE EXCLUIR PET             -->
    <!-- ====================================================== -->
    <servlet>
        <servlet-name>ExcluirPetServlet</servlet-name>
        <servlet-class>br.com.clinica.servlets.ExcluirPetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExcluirPetServlet</servlet-name>
        <url-pattern>/excluir-pet</url-pattern>
    </servlet-mapping>

</web-app>
